<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LinkUp.TeamListPage"
             Title="My Teams">
    <VerticalStackLayout>
        

        <ListView x:Name="listView" ItemTapped="OnTeamTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="12" FontAttributes="Bold" HorizontalOptions="StartAndExpand"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Create a team"
            Clicked="Button_Clicked_1"/>

    </VerticalStackLayout>
</ContentPage>